<html>
    <head>
    <meta charset="UTF-8">
    <link href="/styles/style.css" rel="stylesheet">
    </head>
    <body>
        <header>

            <h1>Flashcard</h1>
            <h3> As-tu bien revise ?</h3>
        </header>

        <section class="subject">
            <div class="cardsColumn">
                {% for card in cardsList %}
                    <div class="card cardQuestion" >{{card.questionRecto}} </div>
                {% endfor %}
            </div>
            <div class="cardsColumn">
                {% for card in cardsList %}
                    <div class="card cardResponse is-hidden">{{card.responseVerso}} </div>
                {% endfor %}
            </div>
            <div class="cardsColumn">
                {% for card in cardsList %}
                    <label for="{{card.questionRecto}}" class="card checkboxField">
                        <input type="checkbox" id="{{card.questionRecto}}"/>
                    </label>
                {% endfor %}
            </div>
            <button type="submit">Envoyer les reponses</button>
        </section>
        
        <section id="score">
        
        </section>

        

        <footer>
            Â© Margot Rasamy - 2020
        </footer>
        <script type="text/javascript" src="/scripts/script.js"></script>
         <script type="text/javascript" src="/scripts/score.js"></script>
    </body>
</html>